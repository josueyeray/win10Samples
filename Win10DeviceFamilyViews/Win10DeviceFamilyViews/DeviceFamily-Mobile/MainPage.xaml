<Page
    x:Class="Win10DeviceFamilyViews.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Win10DeviceFamilyViews"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Border Margin="12" BorderBrush="Red" BorderThickness="2" 
            Background="LightCyan">
            <TextBlock x:Name="TitleText" FontSize="22"
                    Text="This is the mobile view for mainpage" 
                    Foreground="Black"/>
        </Border>
        <StackPanel Margin="12,0,12,24" x:Name="ListPanel" Orientation="Vertical">
            <Image x:Name="Image01" Source="/Assets/Bilbao001.jpg" 
                MaxHeight="260" Stretch="UniformToFill"/>
            <Image x:Name="Image02" Source="/Assets/Bilbao002.jpg" 
                MaxHeight="260" Stretch="UniformToFill"/>
            <Image x:Name="Image03" Source="/Assets/Bilbao003.jpg" 
                MaxHeight="260" Stretch="UniformToFill"/>
        </StackPanel>
    </StackPanel>
</Page>
